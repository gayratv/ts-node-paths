{
  "compilerOptions": {
    "module": "Node16",
    "target": "ESNext",
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "@helpers/*": ["helpers/sub1/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
  ],

  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "files": true,
    "require": ["tsconfig-paths/register"]
  }
}
